@model PagedList.IPagedList<BusFaqT>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Faq";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="contents_zone">
    <h2 class="contents_title">자주묻는질문</h2>

    
    <table cellpadding="0" cellspacing="0" border="0" class="tbl_style" summary="">
        <caption>리스트 게시판</caption>
        <colgroup>
            <col width="8%" />
            <col width="10%" />
            <col width="*" />
            <col width="10%" />
        </colgroup>
        <thead>
            <tr>
                <th>No</th>                
                <th>제목</th>
                <th>등록일</th>
                <th>등록자</th>
            </tr>
        </thead>
        <tbody>
            @if ((int)ViewData["cnt"] > 0)
            {
                foreach (var data in Model)
                {
                <tr>
                    <td>@data.NO</td>
                    <td class="ta_left"><a href="javascript:History.GoEdit(@data.NO)" class="_btn_edit" id="title">@data.TITLE</a></td>
                    <td>@data.REG_DT.ToString().Substring(0,10)</td>
                    <td>@data.REG_ID</td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" style="height: 200px; text-align: center; vertical-align: middle;">등록된 내용이 없습니다.</td>
                </tr>	
            }
        </tbody>
    </table>

    <!-- btn -->
    <div class="btn_right">
        <span class="btnWrap medium"><a href="/bus/Faq?mode=add" class="_btn_write">등록</a></span>
    </div>
    <!-- // btn -->
    
    <!-- page_navi -->
    <div class="page_navi">
        @Html.PagedListPager(Model, page => Url.Action("/", new { page = page, query = ViewData["query"] }))
    </div>
    <!-- // page_navi -->
</div>
