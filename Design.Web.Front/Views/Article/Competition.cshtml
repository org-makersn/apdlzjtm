<!-- BaseList -->
<div class="baseList">
    <ul class="item_area">

        @foreach (ArticleDetailT a in Model.EntityList)
        {
            string className = index % 4 == 0 ? "class=mgR0" : "";
            string likeChk = a.IsLikes == 1 ? "class=on" : "";
            string No = Base64Helper.Base64Encode(@a.MemberNo.ToString());
            
            <li @className>
                <!-- ProductBox -->
                <div class="productBox">
                    <div class="productImg">
                        <a href="/design/Detail/@a.No">
                            <img src="@Url.Content("~/Content/images/placeholder-image.png")" class="lazy-load" data-original="@ViewBag.ArticleImgUrl@a.MainImgName" alt="@a.Title" /></a>
                            @*<img src="@string.Format("data:image/png;base64,")" class="lazy-load" data-original="@ViewBag.ArticleImgUrl@a.MainImgName" alt="@a.Title" /></a>*@
                        
                    </div>
                    <div class="detailBox">
                        <div class="productText">
                            <a href="/design/Detail/@a.No">@a.Title</a>
                        </div>
                        <div class="by">
                            <p>by <span class="name"><a href="/Profile?no=@No">@a.MemberName</a></span></p>
                            @*<h5>@a.Copyright</h5>*@
                        </div>
                        <ul class="countBox">
                            <li class="show" title="조회수"><a href="/design/Detail/@a.No"><span>@a.ViewCnt</span></a></li>

                            <li class="heart" title="좋아요"><a href="javascript:SetLikes('@a.No','@ViewBag.LogOnChk')" onclick="return !count++">
                                <span @likeChk id="likeChk_@a.No">@a.LikeCnt</span></a></li>
                            <li class="comment" title="댓글"><a href="/design/Detail/@a.No&goReply=Y"><span>@a.CommentCnt</span></a></li>
                        </ul>
                    </div>
                </div>
            </li>
            index++;
        }
    </ul>
</div>
