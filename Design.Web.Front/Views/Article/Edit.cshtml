                    $('.delImg').hide();
                    $('.showThum').hide();
                }
            });

            $('.selectImg ul li div').droppable({
                drop: function (event, ui) {
                    var beforeCh = $(ui.helper).html();
                    var afterCh = $(this).html();
                    $(this).html(beforeCh);
                    idxImg.html(afterCh);
                    $('.delImg').hide();
                    $('.showThum').hide();
                }
