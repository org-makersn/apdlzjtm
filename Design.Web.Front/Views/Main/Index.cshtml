    <!-- //MainSlide -->

}


<!-- 컨테스트 디자인 -->
<div class="mainTitle">
    <h2>컨테스트</h2>
    <p>
        <a href="/design?codeNo=10203">더보기 +</a>
    </p>
</div>

<!-- BaseList -->
<div class="baseList">
    <ul class="item_area">
        @foreach (Makersn.Models.ArticleDetailT recommened in ViewBag.ComList)
        {
            string className = comIndex % 4 == 0 ? "class=mgR0" : "";
            string likeChk = recommened.IsLikes == 1 ? "class=on" : "";
            string No = Base64Helper.Base64Encode(recommened.MemberNo.ToString());
            <li @className>
                <!-- ProductBox -->
                <div class="productBox">
                    <div class="productImg">
                        <a href="/design/Detail/@recommened.No">
                            <img src="@ViewBag.ArticleImgUrl@recommened.MainImgName" alt="@recommened.Title" /></a>
                    </div>
                    <div class="detailBox">
                        <div class="productText">
                            <a href="/design/Detail/@recommened.No">@recommened.Title </a>
                        </div>
                        <div class="by">
                            <p>by <span class="name"><a href="/Profile?no=@No">@recommened.MemberName</a></span></p>
                        </div>
                        <ul class="countBox">
                            <li class="show" title="조회수"><a href="/design/Detail/@recommened.No"><span>@recommened.ViewCnt</span></a></li>

                            <li class="heart" title="좋아요"><a href="javascript:SetLikes('@recommened.No','@ViewBag.LogOnChk')" onclick="return !count++">
                                <span @likeChk id="likeChk_@recommened.No">@recommened.LikeCnt</span></a></li>
                            <li class="comment" title="댓글"><a href="/design/Detail?no=@recommened.No&goReply=Y"><span>@recommened.CommentCnt</span></a></li>
                        </ul>
                    </div>
                </div>
                <!-- //ProductBox -->
            </li>
            comIndex++;
        }
    </ul>
</div>
<!-- //BaseList -->
<!-- //컨테스트 디자인 -->



